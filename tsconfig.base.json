{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@aedi/browser-client": ["libs/browser-client/src/index.ts"],
      "@aedi/cdk": ["libs/cdk/src/index.ts"],
      "@aedi/common": ["libs/common/src/index.ts"],
      "@aedi/discord": ["libs/discord/src/index.ts"],
      "@aedi/local": ["libs/local/src/index.ts"],
      "@aedi/test-cases": ["libs/test-cases/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
